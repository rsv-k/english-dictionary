{
   "compileOnSave": false,
   "compilerOptions": {
      "baseUrl": "./",
      "paths": {
         "@shared/*": ["./src/app/shared/*"],
         "@core/*": ["./src/app/core/*"],
         "@features/*": ["./src/app/features/*"]
      },
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "es2015",
      "lib": ["es2018", "dom"]
   },
   "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true
   },
   "experimentalDecorators": true
}
