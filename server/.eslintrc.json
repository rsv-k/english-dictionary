{
   "env": {
      "commonjs": true,
      "es6": true,
      "node": true
   },
   "extends": ["standard"],
   "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
   },
   "parserOptions": {
      "ecmaVersion": 2018
   },
   "rules": {
      "indent": ["error", 3],
      "semi": ["error", "always"],
      "curly": ["error", "all"],
      "brace-style": ["error", "1tbs"],
      "space-before-function-paren": [
         "error",
         {
            "named": "never"
         }
      ]
   }
}
